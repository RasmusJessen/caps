<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>

    <title>Admin</title>
</head>
<body>
    <header>
        <% include ../partials/header %>
    </header>

        <div id="msg">
            <h3>
               <%= message %>
            </h3>  
        </div>

    <form id="admin" action="/admin" method="post">
        <h3>Opret et Produkt</h3>
        <input type="hidden" name="id" value="">
        <p>
        Produkt navn:
        </p>
        <input type="text" name="name" value="">
        <br>
        <p>
        Produkt pris:
         </p>  
        <input type="text" name="price" value="">
        <br>
        <p>
        Produkt info:
        </p>
        <textarea type="text" name="info"></textarea>
        <br>
        <p>
         Produkt kategori:
        </p>
        <select name="select_catch">
            <option value="1">Adidas</option>
            <option value="2">New York</option>
            <option value="3">Nike</option>
            <option value="4">Tommy Hilfiger</option>
        </select>
        <button type="submit" id="submit" name="submit">Gem</button>
      </form>

      <form id="ret" action="/gem_ret" method="post">
        <h3>Redigere et Produkt</h3>
        <input type="hidden" name="id" value="<%= produkter[0].id %>">
        <p>
        Produkt navn:
        </p>
        <input type="text" name="name" value="<%= produkter[0].navn %>">
        <br>
        <p>
        Produkt pris:
         </p>  
        <input type="text" name="price" value="<%= produkter[0].pris %>">
        <br>
        <p>
        Produkt info:
        </p>
        <textarea type="text" name="info"><%= produkter[0].info %></textarea>
        <br>
        <p>
         Produkt kategori:
        </p>
        <select name="select_catch">
            <option value="1">Adidas</option>
            <option value="2">New York</option>
            <option value="3">Nike</option>
            <option value="4">Tommy Hilfiger</option>
        </select>
        <button type="submit" id="submit" name="submit">Gem</button>
      </form>

      

    <div id="create">
        <h1>Alle Produkter</h1>
        <table>
                <tr>
                   <th></th>
                   <th style="text-align:center">Navn</th>
                   <th style="text-align:center">Pris</th>
                   <th style="text-align:center">Info</th>
                </tr>
            <% produkter.forEach(function(produkter_data){ %>
            <tr>
                <td>
                    <a href="ret?id=<%= produkter_data.id %>"><i class="fas fa-edit"></i></a> 
                    <a href="slet?id=<%= produkter_data.id %>" name="delete"><i class="far fa-trash-alt"></i></a>
                </td>
                <td><%= produkter_data.navn %></td>
                <td><%= produkter_data.pris %> kr.</td>
                <td><%= produkter_data.info %></td>
           </tr>
            <% })%>
        </table>
        </div>

    <% include ../partials/javascript %>
    
</body>
</html>